<div class="block" id="premium" style="display:none">
    <h2>{{t.sections.premium}}</h2>
    <p>{{t.contrib.feature-list-title | replace:placeholder, site.title[pagelang]}}</p>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th></th>
            <th>{{t.contrib-key}}<br><span class="label label-success">{{t.contrib.one-time-payment}}</span>
            </th>
            <th>{{t.extended-key}}<br><span class="label label-success">{{t.contrib.one-time-payment}}</span>
            </th>
            <th>{{t.professional-key}}<br><span class="label label-success">{{t.contrib.subscription}}</span>
            </th>
        </tr>
        </thead>
        <tbody>
        {% for feature in site.contrib %}
        <tr>
            <td>{{t.contrib.feature[feature]}}</td>
            <td class="checked">✓</td>
            <td class="checked">✓</td>
            <td class="checked">✓</td>
        </tr>
        {% endfor %}
        {% for feature in site.extended %}
        <tr>
            <td>{{t.contrib.feature[feature]}}{% if site.footnote[feature] %}
                <p class="footnote">{{site.footnote[feature]}}</p>
                {% endif %}</td>
            <td></td>
            <td class="checked">✓</td>
            <td class="checked">✓</td>
        </tr>
        {% endfor %}
        {% for feature in site.professional %}
        <tr>
            <td>{{t.contrib.feature[feature]}}</td>
            <td></td>
            <td></td>
            <td class="checked">✓</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>


